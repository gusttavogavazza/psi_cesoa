<!DOCTYPE html>

<html>

    <head>
        <title>@ViewData["Title"]</title>

        <environment include="Development">
            <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
            <link rel="stylesheet" href="~/css/site.css" />
        </environment>

        <environment exclude="Development">
            <link rel="stylesheet" href="~/css/site.min.css" />
        </environment>
    </head>

    <body>

        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow" style="height: 57px; max-height: 57px;">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">C067058</a>

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="simulador-de-emprestimos-imobiliarios" asp-action="Index">Simulador de empréstimos imobiliários</a>
                            </li>
                        </ul>

                    </div>
                </div>
            </nav>
        </header>

        <div class="container" style="height: calc(100vh - 77px); max-height: calc(100vh - 77px);">
            <main role="main">@RenderBody()</main>
        </div>

        <environment include="Development">
            <script src="~/lib/jquery/jquery.js"></script>
            <script src="~/lib/bootstrap/js/bootstrap.bundle.js"></script>
        </environment>

        <environment exclude="Development">
            <script src="~/lib/jquery/jquery.js"></script>
            <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/site.min.js"></script>
        </environment>

    </body>

</html>

<script>
    var rootUrl = '@Url.Content("~/")';
</script>

@await RenderSectionAsync("Scripts", required: false)